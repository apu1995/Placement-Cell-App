<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/res2">


    <TextView
        android:id="@+id/txtContact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Get In Touch"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FF000F"/>

    <TextView
        android:id="@+id/txtContact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Feel free to Contact"
        android:layout_below="@+id/txtContact1"
        android:layout_alignStart="@+id/txtContact1"
        android:layout_marginLeft="0sp"
        android:layout_marginRight="15sp"
        android:textColor="#FF000F"/>

    <TextView
        android:id="@+id/txtEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Email:"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtContact2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtDisplayEmail1"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtEmail1"
        android:textColor="#000000"
        android:ems="40" />

    <TextView
        android:id="@+id/txtPhoneP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Phone(Personal):"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtEmail1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtDisplayPhoneP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDisplayEmail1"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:ems="40"
        android:layout_alignStart="@+id/txtDisplayEmail1"
        android:layout_marginLeft="75dp"/>

    <TextView
        android:id="@+id/txtPhoneH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Phone(Home):"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtPhoneP"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtDisplayPhoneH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDisplayPhoneP"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="75dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:ems="40"
        android:layout_alignStart="@+id/txtDisplayEmail1" />

    <TextView
        android:id="@+id/txtAddressP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Address(Permanent):"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtPhoneH"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtDisplayAddressP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:ems="40"
        android:layout_below="@+id/txtAddressP" />

    <TextView
        android:id="@+id/txtAddressC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Address(Correspondence):"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtDisplayAddressP"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtDisplayAddressC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:ems="40"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/txtAddressC" />

    <TextView
        android:id="@+id/txtLinked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="LinkedIn:"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtDisplayAddressC"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtDisplayLinked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:ems="40"
        android:layout_alignTop="@+id/txtLinked"
        android:layout_marginLeft="15dp"
        android:layout_alignStart="@+id/txtDisplayEmail1" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarContact"
        android:layout_alignBottom="@+id/txtDisplayAddressP"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
    </ScrollView>